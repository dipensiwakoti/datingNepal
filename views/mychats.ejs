<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat with user</title>
    <link rel="stylesheet" href="/stylesheets/chat.css">    
    <link rel="stylesheet" href="/stylesheets/responsive.css">
    <link rel="stylesheet" href="/stylesheets/mychatsResponsive.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js" integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO" crossorigin="anonymous"></script>
</head>
<body>
    <div class="backIconChat">
        <a href="#"><i class='bx bx-arrow-back'></i></a>  
      </div>
    <audio id="notificationAudio" src="/audios/notifi.mp3"></audio>
    <div class="wrap">
        <div class="left">
            <div class="users">
                <div class="topLook">
                    <div class="imgChat">
                        <img src="/images/profilePictures/<%= actualUser.profilepic %>" alt="Could'nt load !" >
                    </div>
                    <span><%= actualUser.ProfileName %></span>
                </div>
                <div class="allUsers">
                    <h3 style="margin-left:100px;font-size: 34px;">Chats</h3>
                    <% if(actualUser.chatFriends.length>0) { %>
                    <% actualUser.chatFriends.forEach(function(chatUser){ %>
                        
                        <div class="chatUser" id="<%= chatUser._id %>">
                            <div class="img"><img src="/images/profilePictures/<%= chatUser.profilepic %>" alt="error loading!"></div>
                            <div class="usernameChat-user"><%= chatUser.ProfileName %></div>
                        </div>
                   <%  }) %>
                 <%}else { %>
                    <div>
                        <div style="display: flex; justify-content: center; align-items: center;" class="usernameChat-user"><span>No chats to display</span></div>
                    </div>
                    <%  } %>

                </div>
                <div class="otherFeatures-mychats">
                    <div class="backProfile-mychats"><a  style="color: black;text-decoration: none; font-size: medium;" href="/myprofile">Back</a></div>
                </div>
            </div>
        </div>
        <div class="middle">
            <div class="wholeChat">
                <div class="topMiddleChat">
                    <div class="ChatImg">
                        <!-- <img src="/images/profilePictures/9e536ecf153ee2e4503fb334.jpg" alt="Not found!"> -->
                    </div>
                    <div style="display: flex; flex-direction: column;">
                    <div class="username"><span></span></div>
                </div>
                </div>
                <div class="allMessages">
                    <div class="wrapMessages">
                         <h3 style="width: 100%; height: 600px; display: flex; justify-content: center; align-items: center; font-size: 52px;">Click any user to display their<span style="color: rgb(4 40 117); font-size: 60px;margin-left: 10.6px;">   Chats</span>!</h3>
                    </div>
                </div>
                <div class="sendMessage">
                    <form action="#" method="" id="formMsg">
                       <input class="input" type="text" name="sendMsg" id="sendMsg" placeholder=" Message" autocomplete="off">
                       <button style="
                        background: #ff3000;
                        border: none;
                        border-radius: 23%;" type="submit">
                        <i class='bx bxs-send' ></i>
                      </button>
                    </form> 
                </div>
            </div>
        </div>
    </div>
    <script>
        const senderId = "<%= actualUser._id %>"; 
        const senderSocket = "<%= actualUser.socketId %>";
    </script>
</body>
<script src="/javascripts/trial.js"></script>
<script src="/javascripts/socket.js"></script>
</html>